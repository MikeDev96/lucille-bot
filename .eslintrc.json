{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "eol-last": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2
    ]
  }
}