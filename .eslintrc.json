{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "quotes": [
      "error",
      "double",
      { "allowTemplateLiterals": true }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "eol-last": [
      "error",
      "never"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ], 
    "indent": ["error", 2]
  }
}